@{
    ViewData["Title"] = "Home Page";
}
<!--SE LO PASA A LA ACCION DEL controller QUE LO VA A MANDAR A LA VIEW-->
<center><img class="Recetas" src="/recetas.jpg" >


<h1 class="Consigna">INGRESE LOS DATOS PEDIDOS A CONTINUACION PARA AGREGAR UNA NUEVA RECETA</h1></center>
<div >
<form class="Consigna" action='@Url.Action("GuardarReceta", "Home")' method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label class="textForm" for="exampleInputname1">Ingresen el nombre de la receta</label>
    <input type="text" name="Nombre" class="form-control" id="exampleInputname1" required>
  </div>

  <div class="form-group">
    <label class="textForm" for="exampleInputdatetime1">Ingresen los ingredientes que contiene</label>
    <input type="text" name="Ingredientes" class="form-control" id="exampleInputdatetime1" required>
  </div>

  <div class="form-group">
    <label class="textForm" for="exampleInputname1">Ingrese la fecha</label>
    <input type="datetime" name="FechaCreacion" class="form-control" id="exampleInputname1" required>
  </div>

   <input class="form-group" type="file" name="Imagen" required>

<div class="form-group">
    <label class="textForm" for="exampleInputname1">Ingresen el nombre del creador</label>
    <input type="text" name="NombreCreador" class="form-control" id="exampleInputname1" required>
  </div>

  <div class="form-group">
    <label class="textForm" for="exampleInputname1">Ingresen la puntuacion de la receta</label>
    <input type="number" name="Likes" class="form-control" id="exampleInputname1" required>
  </div>
  <button  type="submit" class="btn btn-primary">Guardar Receta</button>
</form>
</div>


@foreach (Recetas r in ViewBag.Receta)
{
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">@r.nombre</h5>
        @foreach (Ingredientes i in r)
        {
            <p class="card-text">@ViewBag.r.ingredientes</p>
        }
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
  </div>
}
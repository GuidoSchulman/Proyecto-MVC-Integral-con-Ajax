@using TP8.Models;

<center><h1 class="Titulo2 Consigna">Recetas Usuarios</h1></center>

@foreach (Recetas r in @ViewBag.Receta)
{
  
<center><div class="row MisRecetas">
  <div class="col "  >
    <div class="card Consignados ">
      <div class="card-body">
        <h5 class="card-title Titulo2">@r.Nombre</h5>
<img class="imagen" src="/@r.Imagen">
          <button class ="button-30"  onclick="$('#ing_@r.ID_Recetas').toggle()">Ver Ingredientes</button>
          <div id="ing_@r.ID_Recetas" class="ingredientes">
            <h2>Ingredientes:</h2>
          
          @foreach (Todo irc in @ViewBag.Conjunto)
          {
            @if (r.ID_Recetas == irc.ID_Recetas)
            {
              <h4 class="card-text">@irc.NombreIngrediente</h4>
            }
        }
        </div>
        <h4>CREADOR: @r.NombreCreador</h4>
        
        <h4>VALORACION: @r.Likes/5</h4>
       
        <div >
          
        @for (int i = 0; i<@r.Likes; i++)
        {
          <p  style="width:20%;justify-content: center:items; float:left; font-weight: bold; ">â˜…</p>
        }
        </div>
        <br>
        <br>
       
        <a href='@Url.Action("EliminarReceta","Home",new{ ID=@r.ID_Recetas})' class="btn btn-danger boton">Eliminar Receta</a>
       
      </div>
    </div>
  </div>
  </div></center>
}


